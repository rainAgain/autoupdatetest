{
  "name": "testauto",
  "version": "1.0.0",
  "description": "A Electron application test about auto-update",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder ./",
    "publish": "build --win -p always"
  },
  "build": {
    "appId": "com.github.rainagain.testauto",
    "productName": "testauto",
    "files": [
      "app/**/*",
      "main.js",
      "./node_modules",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "menuCategory": true, //是否要创建子菜单开始菜单快捷方式和程序文件目录
      "installerIcon": "./res/icon.ico",
      "uninstallerIcon": "./res/icon.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "rainagain",
        "repo": "autoupdatetest"
      }
    ]
  },
  "repository": "https://github.com/rainAgain/autoupdatetest",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "jjj",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "~1.7.8",
    "electron-builder": "^19.45.5"
  },
  "dependencies": {
    "electron-log": "^2.2.11",
    "electron-updater": "^2.16.1"
  }
}
